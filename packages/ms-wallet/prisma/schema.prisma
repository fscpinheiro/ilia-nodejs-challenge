generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TransactionType {
  CREDIT
  DEBIT
}

model Transaction {
  id        String          @id @default(uuid())
  userId    String          @map("user_id")
  type      TransactionType
  amount    Int
  createdAt DateTime        @default(now()) @map("created_at")

  @@map("transactions")
}
